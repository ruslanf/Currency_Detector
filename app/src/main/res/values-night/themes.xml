<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CurrencyDetector" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- NoActionBar application theme. -->
    <style name="Theme.SmartTeam.NoActionBar" parent="Theme.CurrencyDetector">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- SplashScreen theme. -->
    <style name="SplashScreen" parent="Theme.CurrencyDetector">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Theme.CurrencyDetector.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CurrencyDetector.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- TextInput Style -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginBottom">@dimen/margin_16dp</item>
        <item name="errorEnabled">false</item>
        <item name="errorTextAppearance">@style/ErrorTextInput</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@drawable/edit_box_border</item>
        <item name="boxCornerRadiusBottomStart">@dimen/borderCornerTextInput</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/borderCornerTextInput</item>
        <item name="boxCornerRadiusTopStart">@dimen/borderCornerTextInput</item>
        <item name="boxCornerRadiusTopEnd">@dimen/borderCornerTextInput</item>
    </style>
    <!-- Error TextInput -->
    <style name="ErrorTextInput" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/errorColor</item>
    </style>
    <!-- TextInput -->
    <style name="TextInput" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
    </style>

    <!-- Header style -->
    <style name="textHeaderTitle">
        <item name="android:textSize">@dimen/size24</item>
        <item name="android:textColor">@color/headerTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Category item style -->
    <style name="itemTitleStyle">
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:textColor">@color/headerTitle</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Rounded icon -->
    <style name="roundedIV" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_4dp</item>
    </style>

    <style name="textMenuItemSettings" >
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:textColor">@color/menuItemTitle</item>
    </style>

    <style name="BaseStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>